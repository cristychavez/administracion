@page "/mesa/index"
@inject HttpClient httpClient
@inject NavigationManager NavigationManager

<MudText Typo="Typo.h2" Class="ml">Mesa</MudText>

<MudTable Items="@mesas" Dense="true" Hover="true" Bordered="true" Striped="true">
    <ToolBarContent>
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="goAdd" />
        <MudSpacer />
        <MudTextField @bind-Value="searchText" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Estado</MudTh>

    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        @switch(context.Estado){
            case 1:
                <MudTd DataLabel="Estado">Habilitado</MudTd>
                break;
            case 2:
                <MudTd DataLabel="Estado">Inhabilitado</MudTd>
                break;
        }
        <MudTd>
            <MudButton Link="@($"/departamento/editar/{context.Id}")" Size="Size.Small" Variant="Variant.Outlined" Color="Color.Tertiary"
                       Class="text-center">Editar</MudButton>
            <MudButton Link="@($"/departamento/eliminar/{context.Id}")" Size="Size.Small" Variant="Variant.Outlined" Color="Color.Warning"
                       Class="text-center">Eliminar</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private IEnumerable<Mesa> mesas = new List<Mesa>();
    private string searchText = "";

    protected override async Task OnInitializedAsync()
    {
        await getAll();
    }

    private async Task getAll(){
        var httpResponse = await httpClient.GetStringAsync("departamento");
        mesas = JsonSerializer.Deserialize<IEnumerable<Mesa>>(httpResponse, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
    }

    private void goAdd(){
        NavigationManager.NavigateTo("mesa/agregar");
    }
}